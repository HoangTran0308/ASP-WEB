@model LopHoc

<div class="container">
    <h3> Chỉnh sửa lớp học</h3>
    <form method="post">
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"> Tên lớp học </label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NamNhapHoc" class="control-label"></label>
            <input asp-for="NamNhapHoc" class="form-control" />
            <span asp-validation-for="NamNhapHoc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NamRaTruong" class="control-label"></label>
            <input asp-for="NamRaTruong" class="form-control" />
            <span asp-validation-for="NamRaTruong" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SoLuongSinhVien" class="control-label"></label>
            <input asp-for="SoLuongSinhVien" class="form-control" />
            <span asp-validation-for="SoLuongSinhVien" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary"> Lưu </button>
        <a asp-action="Index" class="btn btn-secondary"> Hủy </a>
    </form>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}