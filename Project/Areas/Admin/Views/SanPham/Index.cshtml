@model IEnumerable<SanPham>
<div class="table">
    <table>
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Gía tiền</th>
                <th>Hình ảnh</th>
                <th>Tên thể loại</th>
                <th>Tên chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in @Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.price</td>
                    <td><img src="@item.ImageUrl" width="50px"/> </td>
                    <td>@item.TheLoai.Name</td>
                    <td>Chức năng</td>
                    <td>
                        <a asp-action="Upsert" asp-route-id="@item.Id">Edit</a> |
                        <a href="#">Details</a> |
                        <a href="#" onclick="confirmDelete(@item.Id, $(this))">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="SanPham" asp-action="Upsert" class="btn btn-primary">Thêm mới</a>
</div>

<script>
    function confirmDelete(id, row) {
        if (confirm("Ban co chac chan xoa san pham co id la " + id +"?")) {
            xoa(id, $(row))
        }
    }
    function xoa(idx, row) {
        $.ajax({
            url: `SanPham/Delete`,
            data: { id: idx },
            type: "POST",
            success: function (data) {
                row.closest("tr").remove();
            }
        })
    }
</script>